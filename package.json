{
  "name": "angular-server-side-configuration",
  "version": "8.0.0-beta.0",
  "description": "Configure an angular application on the server",
  "builders": "./builders/builders.json",
  "schematics": "./schematics/collection.json",
  "scripts": {
    "clean": "rimraf coverage dist {builders,models,schematics}/**/*.{d.ts,js} test/*.{d.ts,js} junit.xml",
    "build:node": "npm run clean && tsc",
    "build:go": "docker-compose run build-go",
    "build": "run-p build:*",
    "pretest": "npm run clean",
    "test:node": "jest -i --ci",
    "test:go": "cd src/cli && go build && go test",
    "test": "run-s test:*",
    "lint": "npx tslint -p tsconfig.json"
  },
  "files": [
    "**/*.{js,d.ts,json}",
    "!*.spec.{d.ts,ts,js}",
    "!{test,cli,.git,.vscode}",
    "!{tsconfig,tslint,package-lock}.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-server-side-configuration.git"
  },
  "keywords": [
    "angular",
    "configuration",
    "server",
    "server-side",
    "docker",
    "openshift",
    "kubernetes"
  ],
  "author": "kyubisation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-server-side-configuration/issues"
  },
  "homepage": "https://github.com/kyubisation/angular-server-side-configuration#readme",
  "dependencies": {
    "@angular-devkit/architect": "^0.800.3"
  },
  "devDependencies": {
    "@angular-devkit/core": "^8.0.4",
    "@angular-devkit/schematics": "^8.0.4",
    "@schematics/angular": "^8.0.4",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.14.4",
    "@types/rimraf": "^2.0.2",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.ts$",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.spec.ts"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  }
}
